<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/filter.css">

<div id="filters">
    <div class="filter">
        <a href="/listings?category=Trending" class="filter-link">
            <div> <i class="fa-solid fa-fire"></i></div>
            <p> Trending </p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Rooms" class="filter-link">
            <div><i class="fa-solid fa-bed"></i></div>
            <p> Rooms </p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Iconic Cities" class="filter-link">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Lakes" class="filter-link">
            <i class="fa-solid fa-water"></i>
            <p>Lakes</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Castles" class="filter-link">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </a>
    </div>
    
    <div class="filter">
        <a href="/listings?category=Camping" class="filter-link">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Farms" class="filter-link">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Arctic" class="filter-link">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Domes" class="filter-link">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings?category=Boats" class="filter-link">
            <div><i class="fa-solid fa-ferry"></i></div>
            <p>Boats</p>
        </a>
    </div>
    
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%=listing.title %> </b><br>
              <span class="price">&#8377; <%=listing.price.toLocaleString("en-IN") %>/night</span>
              <span class="total-price" style="display: none;">&#8377; <%= (listing.price * 1.18).toLocaleString("en-IN") %>/night (incl. 18% GST)</span>
            </p>
          </div>
        </div>
      </a> 
    <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("change", () => {
    let priceElements = document.querySelectorAll(".price");
    let totalPriceElements = document.querySelectorAll(".total-price");

    if (taxSwitch.checked) {
      priceElements.forEach(price => price.style.display = "none"); // Hide original price
      totalPriceElements.forEach(total => total.style.display = "inline"); // Show total price
    } else {
      priceElements.forEach(price => price.style.display = "inline"); // Show original price
      totalPriceElements.forEach(total => total.style.display = "none"); // Hide total price
    }
  });
</script>
