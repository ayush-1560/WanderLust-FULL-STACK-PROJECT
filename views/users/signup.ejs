<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/users/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" placeholder="username" type="text" id="username" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>   
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" placeholder="email" type="text" id="email" class="form-control" required>  
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" placeholder="password" type="password" id="password" class="form-control" required>  
            </div>
            <!-- Ensure the button is inside the same div -->
            <div>
                <button class="btn btn-success">SignUp</button>
            </div>  
        </form>
    </div>
</div>
